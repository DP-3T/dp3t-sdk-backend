<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %p [%c] - &lt;%m&gt;%n</pattern>
        </encoder>
    </appender>

    <logger name="org.dpppt" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
